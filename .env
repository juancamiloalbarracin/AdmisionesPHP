# ==========================================================
# CONFIGURACIÓN DE ENTORNO - SISTEMA ADMISIONES UDC
# ==========================================================
# Este archivo contiene todas las variables de configuración
# para conectar con la base de datos, JWT y configuraciones
# específicas del sistema

# CONFIGURACIÓN DE BASE DE DATOS MYSQL
# -------------------------------------
# Host donde está alojada la base de datos MySQL
DB_HOST=localhost
# Puerto de conexión MySQL (por defecto 3306)
DB_PORT=3306
# Nombre de la base de datos
DB_DATABASE=admisiones_udc
# Usuario de la base de datos con permisos de lectura/escritura
DB_USERNAME=root
# Contraseña del usuario de base de datos
DB_PASSWORD=
# Charset para conexiones UTF-8 (soporte caracteres especiales)
DB_CHARSET=utf8mb4

# CONFIGURACIÓN JWT (JSON WEB TOKENS)
# -----------------------------------
# Clave secreta para firmar los tokens JWT
# IMPORTANTE: En producción debe ser una clave compleja y aleatoria
JWT_SECRET_KEY=udc_admisiones_secret_key_2025_seguro_complejo
# Tiempo de expiración de tokens en segundos (86400 = 24 horas)
JWT_EXPIRATION_TIME=86400
# Algoritmo de encriptación para JWT
JWT_ALGORITHM=HS256

# CONFIGURACIÓN DE ENTORNO GENERAL
# --------------------------------
# Entorno de ejecución: development, testing, production
APP_ENV=development
# Activar modo debug (true/false)
APP_DEBUG=true
# URL base de la aplicación
APP_URL=http://localhost
# Puerto del servidor Apache (XAMPP)
APP_PORT=80

# CONFIGURACIÓN DE LOGS Y DEBUGGING
# ---------------------------------
# Nivel de logging: debug, info, warning, error
LOG_LEVEL=debug
# Activar logs de consultas SQL lentas
LOG_SLOW_QUERIES=true
# Tiempo límite para considerar consulta lenta (segundos)
SLOW_QUERY_THRESHOLD=2

# CONFIGURACIÓN DE SEGURIDAD
# --------------------------
# Tiempo máximo de sesión en segundos
SESSION_TIMEOUT=7200
# Activar protección CSRF
CSRF_PROTECTION=true
# Activar protección XSS
XSS_PROTECTION=true

# CONFIGURACIÓN DE CORS PARA REACT
# --------------------------------
# URL del frontend React
CORS_ORIGIN=http://localhost:5174
# Métodos HTTP permitidos
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
# Headers permitidos
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# CONFIGURACIÓN DE VALIDACIONES
# -----------------------------
# Longitud mínima de contraseñas
MIN_PASSWORD_LENGTH=6
# Número máximo de intentos de login
MAX_LOGIN_ATTEMPTS=5
# Tiempo de bloqueo tras intentos fallidos (minutos)
LOCKOUT_DURATION=15

# CONFIGURACIÓN DE SOLICITUDES Y RADICADOS
# ---------------------------
# Prefijo para números de radicado
RADICADO_PREFIX=UDC
# Año actual para radicados
RADICADO_YEAR=2025
